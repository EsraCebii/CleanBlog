<%- include('partials/_header') -%>
<%- include('partials/_navigation.ejs') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail.substring(0, 50) %></h2>
            <span class="meta"> <%= post.dateCreated.toDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>


  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h2><%= post.title %></h2>
          <p><%= post.detail %></p>
          <a href="/posts/edit/<%= post._id %>" class="btn btn-primary"><span>Update Details</span> </a>
          <a href="/posts/<%= post._id %>?_method=DELETE" class="btn btn-danger"
            onclick="return confirm('Are you sure?')"><span>Delete</span> </a>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include('partials/_footer') -%>